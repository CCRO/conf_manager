<h3>Call Queue (<%=@wait_count%>)</h3>

<% @waiting_participants.each do |call| %>

	<script>
		$(function() {
			//makers call in queue draggable
			$( "#Q<%=call.sid%>" ).draggable({ revert: true });
		});
	</script>

	<div id="Q<%=call.sid%>" class="ui-widget-content">
		<div class="btn primary_phone" style="width: 150px">
			<p><%= get_caller_name(call) %> <%= link_to_hangup_call(call.sid) %> </p>
			<p>From:<%= call.from %></p>
			<p>To:<%= call.to %> <%= link_to_toggle_mute_call(call.sid) %></p>
		</div>
	</div>
	
<% end %>