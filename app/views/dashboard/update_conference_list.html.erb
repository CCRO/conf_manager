	</ul>
<% end %>

<% if @empty_conf.empty? %>
	<h3>Available Conference Lines: None</h3>
<% else %>
	<h3>Available Conference Lines: </h3>
	<ul>
		<li>
			<% @empty_conf.each do |conf| %>
				
				<%= conf %>, Set Guest Pin ____, Invite contacts through <a href="#">Phone</a> or <a href="#">Text</a>

			<% end %>
		</li>
	</ul>
<% end %>