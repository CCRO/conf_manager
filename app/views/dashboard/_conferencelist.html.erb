<!-- Main hero unit for a primary marketing message or call to action -->
<div class="hero-unit">
	<h3>Conference List</h3>
	
	<table>
	  <tr>
	    <th>Name</th>
	    <th>Pin</th>
	    <th>Sid</th>
	    <th>Description</th>
	    <th></th>
	    <th></th>
	    <th></th>
	  </tr>

	<% @conferences.each do |conference| %>
	  <tr>
	    <td><%= conference.confname %></td>
	    <td><%= conference.pin %></td>
	    <td><%= conference.sid %></td>
	    <td><%= conference.description %></td>
	    <td><%= link_to 'Show', conference %></td>
	    <td><%= link_to 'Edit', edit_conference_path(conference) %></td>
	    <td><%= link_to 'Destroy', conference, confirm: 'Are you sure?', method: :delete %></td>
	  </tr>
	<% end %>
	</table>

	<br />

	<%= link_to 'New Conference', new_conference_path %>
	
	
	
	<h3>Active Conference Groups</h3>
	<ul>
	    	<li>Conference 1,
