<!-- Main hero unit for a primary marketing message or call to action -->
<div class="hero-unit">
	
	<div class="conference_list_items">
	</div> <!--  end .conference_list_items-->	
	
</div> <!--end hero-unit-->

<script>
		//Script that updates the confernce list every few seconds
		function replace_conference_list() {
		// Do a $.ajax call to your server.
		$.ajax({
			url: '/dashboard/update_conference_list',
			type: 'get',
			dateType: 'html',
			success: function(data) {
				// Replace the list with the new one.
				$('.conference_list_items').html(data);
				// And restart the timer.
				window.setTimeout(replace_conference_list, 2000);
			},
			failure: alert("Failed to get the updated conference list")
		});
	}
	replace_conference_list();
</script>